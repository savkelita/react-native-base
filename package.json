{
  "name": "react-native-base",
  "version": "0.1.0",
  "private": true,
  "author": "Marko Savic",
  "keywords": [
    "tea-effect",
    "effect",
    "typescript",
    "react-native",
    "elm-architecture"
  ],
  "description": "Base project for React Native applications using tea-effect architecture.",
  "license": "MIT",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "clear": "expo start -c",
    "prebuild:android": "expo prebuild --platform android",
    "prebuild:android:clean": "expo prebuild --platform android --clean",
    "prebuild:ios": "expo prebuild --platform ios",
    "prebuild:ios:clean": "expo prebuild --platform ios --clean",
    "checkts": "tsc --noEmit",
    "lint": "eslint ./src",
    "prettier": "prettier --list-different \"./src/**/*.ts\" \"./src/**/*.tsx\"",
    "fix-lint": "eslint --fix ./src",
    "fix-prettier": "prettier --write \"./src/**/*.ts\" \"./src/**/*.tsx\"",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test": "yarn prettier && yarn checkts && yarn test:unit",
    "prepare": "husky"
  },
  "dependencies": {
    "@effect/platform": "^0.94.5",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-navigation/drawer": "^7.8.1",
    "@react-navigation/native": "^7.1.28",
    "@react-navigation/native-stack": "^7.13.0",
    "effect": "^3.19.19",
    "expo": "~54.0.33",
    "expo-constants": "~18.0.13",
    "expo-status-bar": "~3.0.9",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-worklets": "0.5.1",
    "tea-effect": "^0.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@effect/vitest": "^0.27.0",
    "@eslint/js": "^10.0.1",
    "@types/react": "~19.1.0",
    "@types/react-native": "^0.73.0",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
